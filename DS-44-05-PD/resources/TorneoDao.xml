<?xml version="1.0" encoding="UTF-8"?>

<querys>
	<query name="findAll">
		<script>SELECT * FROM TORNEO;</script>
	</query>
	<query name="findOne" var="torneo">
		<script>SELECT * FROM TORNEO WHERE id = [torneo.id];</script>
	</query>
	<query name="findByCode">
		<script>SELECT * FROM TORNEO WHERE code = [codigo];</script>
	</query>
	<query name="add" var="torneo">
		<script>INSERT INTO TORNEO VALUES ([torneo.codigo]);</script>
	</query>
	<query name="delete" var="torneo">
		<script>DELETE FROM TORNEO WHERE ID = [torneo.id];</script>
	</query>
	<query name="deleteByCode" var="torneo">
		<script>DELETE FROM TORNEO WHERE CODE = [torneo.codigo]</script>
	</query>
</querys>